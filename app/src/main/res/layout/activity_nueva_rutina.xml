<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_nueva_rutina"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.om84.go.NuevaRutina"
    android:background="@color/negro">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="41dp"
        android:id="@+id/txtNombre"
        android:textColor="@color/gris1"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_marginTop="51dp"
        android:id="@+id/txtCantEjercicios"
        android:layout_below="@+id/txtNombre"
        android:layout_alignLeft="@+id/txtNombre"
        android:layout_alignStart="@+id/txtNombre"
        android:textColor="@color/gris1"/>

    <TextView
        android:text="Nombre Rutina"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/txtNombre"
        android:layout_alignStart="@+id/txtNombre"
        android:layout_marginTop="20dp"
        android:id="@+id/tvNombre"
        android:textColor="@color/naranja"/>

    <TextView
        android:text="Cantidad Ejercicios"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtNombre"
        android:layout_alignLeft="@+id/txtCantEjercicios"
        android:layout_alignStart="@+id/txtCantEjercicios"
        android:layout_marginTop="32dp"
        android:id="@+id/tvCantEjercicios"
        android:textColor="@color/naranja"/>

    <Button
        android:text="Nueva Rutina"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtCantEjercicios"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="88dp"
        android:id="@+id/btnNuevaRutina" />
</RelativeLayout>
